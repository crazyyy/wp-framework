{
  "domain": "wp-framework.dev",
  "theme": "wp-framework",
  "path": {
    "base": {
      "src":"assets/",
      "dest": "./html/",
      "desthtml": "./html/**/*.{html,htm,php}"
    },
    "images": {
      "src": "assets/img/",
      "srcimg": "assets/img/**/*.{png,jpg,jpeg,gif,svg}",
      "dest": "./html/img/",
      "spritePng": "assets/sprite-png/**/*.png",
      "spriteSvg": "assets/sprite-svg/**/*.svg"
    },
    "fonts": {
      "src": "assets/fonts/**",
      "dest": "./html/fonts/"
    },
    "styles": {
      "src": "assets/scss/",
      "srcfiles": "assets/scss/**/*.scss",
      "css": "assets/css/",
      "cssfiles": "assets/css/**/*.css",
      "dest": "./html/css/"
    },
    "scripts": {
      "src": "assets/js/**",
      "dest": "./html/js/"
    }
  },
  "sprite": {
    "imgName": "_sprite_png.png",
    "cssName": "_sprite_png.scss",
    "imgPath": "../img/_sprite_png.png"
  }
}
